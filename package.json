{
  "name": "easy-cash",
  "private": true,
  "author": "Dedan Inc <dhanuprys@gmail.com>",
  "description": "Aplikasi kasir",
  "main": "./main/index.js",
  "homepage": "https://github.com/dhanuprys/easy-cash",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhanuprys/easy-cash.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build renderer",
    "start": "electron .",
    "dist": "yarn build && electron-builder build --linux --win --publish never",
    "deploy": "yarn build && electron-builder build --linux --win --publish always",
    "pack": "yarn build && electron-builder --dir",
    "lint": "next lint",
    "postinstall": "install-app-deps"
  },
  "build": {
    "appId": "kasirku",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-regular-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@reduxjs/toolkit": "^1.6.2",
    "axios": "^0.24.0",
    "dotenv": "^10.0.0",
    "electron-updater": "^4.3.9",
    "exceljs": "^4.3.0",
    "express": "^4.17.1",
    "get-port": "^6.0.0",
    "get-port-sync": "^1.0.1",
    "json-server": "^0.17.0",
    "next": "12.0.3",
    "nodejs-captcha": "^0.0.6",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.4.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.6"
  },
  "devDependencies": {
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "electron-builder-squirrel-windows": "^22.14.6",
    "eslint": "7",
    "eslint-config-next": "12.0.3",
    "nodemon": "^2.0.15"
  }
}
